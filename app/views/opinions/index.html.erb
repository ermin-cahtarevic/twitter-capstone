<div class="homepage">
  <aside class="left-menu">
    <div class="user-img"><%= gravatar_for(current_user, options = { size: 100 }) %></div>
    <div class="user-fullname"><%= current_user.full_name %></div>
    <div class="user-stats">
      <div>
        <p class="stat-num"><%= current_user.followings.count %></p>
        <p>Following</p>
      </div>
      <div>
        <p class="stat-num"><%= current_user.followers.count %></p>
        <p><%= 'Follower'.pluralize(current_user.followers.count) %></p>
      </div>
    </div>
    <%= link_to opinions_path, class: 'left-menu-active' do %>
      <i class="fa fa-home"></i>
      <div class="profile-link">Home</div>
    <% end %>
    <%= link_to user_path(current_user.id) do %>
      <i class="fa fa-user"></i>
      <div class="profile-link">Profile</div>
    <% end %>
  </aside>
  <div class="center-menu">
    <%= render 'shared/header' %>
    <div class="center-wrap">
      <div class="tweet-center">
        <div class="title-section">
          <div class="tweets-text">Tweets</div>
        </div>
        <%= render 'opinions/new' %>
        <ul class="tweet-list">
          <% following_opinions.each do |opinion| %>
            <li class="individual-tweet">
              <div class="tweet-img-wrap">
                <div class="tweet-img"><%= gravatar_for(opinion.user, options = { size: 50 }) %></div>
              </div>
              <div class="tweet-name-text">
                <div class="tweet-fullname">
                  <%= link_to opinion.user.full_name, user_path(opinion.user.id) %>
                </div>
                <div class="tweet-username">
                  @<%= opinion.user.username %>
                </div>
                <div class="tweet-created-at">
                  | <%= time_ago_in_words(opinion.created_at) %> ago
                </div>
                <p><%= opinion.text %></p>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
      <aside>
        <p class="who-to-follow">Who to follow</p>
        <% not_following.each do |user| %>
          <%= link_to user_path(user.id), class: 'user-follow-link' do %>
            <div class="user-follow">
              <div class="user-follow-img"><%= gravatar_for(user, options = { size: 45 }) %></div>
              <div class="user-follow-text">
                <div class="user-follow-fullname"><%= user.full_name %></div>
                <div class="user-follow-username">@<%= user.username %></div>
              </div>
            </div>
          <% end %>
        <% end %>
      </aside>
    </div>
  </div>
</div>